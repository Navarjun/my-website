extends header

block content
  .container.portfolio-container
    each project,index in projects
      .row
        if index%2 == 0
          .card  
            .portfolio-image
              a(href="/design/"+project.urlId)
                img(src=""+project.imageFile)
            .portfolio-brief
              h3
                a(href="/design/"+project.urlId)= project.title
              p= project.description
        else
          .card 
            .portfolio-brief
              h3
                a(href="/design/"+project.urlId)= project.title
              p= project.description
            .portfolio-image
              a(href="/design/"+project.urlId)
                img(src=""+project.imageFile)
